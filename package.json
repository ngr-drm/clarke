{
	"name": "clarke-mvp",
	"version": "1.0.0",
	"description": "sandbox API for supplier management",
	"author": "Jean Lucas P. Pita",
	"scripts": {
		"format": "pnpm biome format ./src",
		"lint": "biome lint --error-on-warnings ./src",
		"migrations": "node -r ts-node/register --env-file .env ./src/providers/pg-db/migrate.ts",
		"build": "tsc -b",
		"build:watch": "tsc -w",
		"dev:run": "npx nodemon --env-file .env dist/index.js",
		"dev": "npx concurrently \"npm run build\" \"npm run dev:run\"",
		"dev:watch": "npx concurrently \"npm run build:watch\" \"npm run dev:run\"",
		"test": "jest",
		"start": "node dist/index.js"
	},
	"volta": {
		"node": "20.16.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@tsconfig/recommended": "^1.0.7",
		"@types/jest": "^29.5.12",
		"@types/node": "^22.0.0",
		"@types/pg": "^8.11.6",
		"concurrently": "^8.2.2",
		"jest": "^29.7.0",
		"nodemon": "^3.1.4",
		"ts-jest": "^29.2.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"env-var": "^7.5.0",
		"fastify": "^4.28.1",
		"pg": "^8.12.0",
		"zod": "^3.23.8"
	}
}
